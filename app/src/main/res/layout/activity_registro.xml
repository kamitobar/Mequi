<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_registro"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="16dp"
android:paddingLeft="64dp"
android:paddingRight="64dp"
android:paddingTop="16dp"
android:orientation="vertical"
android:background="@color/mintcream"
tools:context="camilatobar.mequi.RegistroActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="30dp"
        android:src="@drawable/mequi"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" MEQUIRegistro"
        android:textColor="#9f3730"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo Electrónico"
        android:gravity="center"
        android:id="@+id/eRcorreo"
        android:inputType="textEmailAddress"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:gravity="center"
        android:id="@+id/eRpass"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repetir contraseña"
        android:gravity="center"
        android:id="@+id/eRrepass"
        android:inputType="textPassword"/>

/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:text="Registrarse"
        android:textColor="@color/white"
        android:background="#9f3730"
        android:layout_gravity="center"
        android:id="@+id/bRregistrar"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:background="#9f3730"
        android:onClick="onClick"
        android:text="Cancelar"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/bRcancelar"/>


</LinearLayout>

</LinearLayout>

